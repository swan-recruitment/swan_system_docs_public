{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Swan Phase Index",
  "type": "object",
  "properties": {
    "phases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "status",
          "objectives",
          "dependencies",
          "entry_criteria",
          "exit_criteria",
          "risks",
          "kpis",
          "links"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "objectives": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "entry_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "exit_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "risks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "item",
                "level"
              ],
              "properties": {
                "item": {
                  "type": "string"
                },
                "level": {
                  "type": "string",
                  "enum": [
                    "L",
                    "M",
                    "H"
                  ]
                },
                "mitigation": {
                  "type": "string"
                }
              }
            }
          },
          "kpis": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "href"
              ],
              "properties": {
                "type": {
                  "type": "string"
                },
                "href": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "phases"
  ]
}