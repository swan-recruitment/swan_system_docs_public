{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CT System Health",
  "type": "object",
  "required": [
    "systemId",
    "status"
  ],
  "properties": {
    "systemId": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "green",
        "amber",
        "red",
        "unknown"
      ]
    },
    "lastHeartbeat": {
      "type": "string",
      "format": "date-time"
    },
    "errors24h": {
      "type": "integer",
      "minimum": 0
    },
    "slo": {
      "type": "object"
    },
    "notes": {
      "type": "string"
    }
  }
}